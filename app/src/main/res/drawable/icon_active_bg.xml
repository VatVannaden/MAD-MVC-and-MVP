<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- This item creates the shadow effect using a radial gradient -->
    <item>
        <shape android:shape="oval">
            <!-- The gradient goes from a semi-transparent black to fully transparent -->
            <gradient
                android:gradientRadius="32dp"
                android:centerColor="#12444444"
                android:endColor="@android:color/transparent"
                android:startColor="#24000000"
                android:type="radial" />

            <!-- Adjust the size to control how large the shadow is -->
            <size
                android:width="30dp"
                android:height="30dp" />
        </shape>
    </item>

</layer-list>
